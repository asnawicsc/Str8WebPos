<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :rest_id, class: "control-label" %>
    <%= number_input f, :rest_id, class: "form-control" %>
    <%= error_tag f, :rest_id %>
  </div>

  <div class="form-group">
    <%= label f, :rest_table_id, class: "control-label" %>
    <%= number_input f, :rest_table_id, class: "form-control" %>
    <%= error_tag f, :rest_table_id %>
  </div>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :pos_x, class: "control-label" %>
    <%= number_input f, :pos_x, step: "any", class: "form-control" %>
    <%= error_tag f, :pos_x %>
  </div>

  <div class="form-group">
    <%= label f, :pos_y, class: "control-label" %>
    <%= number_input f, :pos_y, step: "any", class: "form-control" %>
    <%= error_tag f, :pos_y %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
